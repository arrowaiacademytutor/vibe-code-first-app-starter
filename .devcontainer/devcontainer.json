{
  "name": "Vibe starter (Codespace)",
  "image": "mcr.microsoft.com/devcontainers/python:1",
  "forwardPorts": [8501],
  "portsAttributes": {
    "8501": { "label": "Streamlit app", "onAutoForward": "openBrowser" }
  },
  "postCreateCommand": "pip install -r requirements.txt",
  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  }
}
